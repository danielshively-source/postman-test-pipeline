{
  "info": {
    "name": "JSONPlaceholder API Tests",
    "_postman_id": "jsonplaceholder-api-tests",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "Comprehensive test suite for JSONPlaceholder API covering smoke, functional, schema validation, error handling, and integration flow."
  },
  "variable": [
    { "key": "baseUrl", "value": "https://jsonplaceholder.typicode.com" }
  ],
  "item": [
    {
      "name": "Smoke Tests",
      "item": [
        {
          "name": "Health Check - GET /posts",
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('Smoke: API is reachable (200)', function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test('Smoke: Response time is acceptable (< 2s)', function () {",
                  "    pm.expect(pm.response.responseTime).to.be.below(2000);",
                  "});",
                  "",
                  "pm.test('Smoke: Response is JSON', function () {",
                  "    const ct = pm.response.headers.get('Content-Type');",
                  "    pm.expect(ct).to.include('application/json');",
                  "});",
                  "",
                  "pm.test('Smoke: Returns array of posts', function () {",
                  "    const data = pm.response.json();",
                  "    pm.expect(data).to.be.an('array');",
                  "    pm.expect(data.length).to.be.above(0);",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [],
            "url": { "raw": "{{baseUrl}}/posts", "host": ["{{baseUrl}}"], "path": ["posts"] }
          }
        }
      ]
    },
    {
      "name": "Functional Tests",
      "item": [
        {
          "name": "Get Single Post - GET /posts/1",
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('Functional: Status is 200', function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test('Functional: Post has required fields', function () {",
                  "    const post = pm.response.json();",
                  "    pm.expect(post).to.have.property('id', 1);",
                  "    pm.expect(post).to.have.property('userId');",
                  "    pm.expect(post).to.have.property('title');",
                  "    pm.expect(post).to.have.property('body');",
                  "});",
                  "",
                  "pm.test('Functional: Field types are correct', function () {",
                  "    const post = pm.response.json();",
                  "    pm.expect(post.id).to.be.a('number');",
                  "    pm.expect(post.userId).to.be.a('number');",
                  "    pm.expect(post.title).to.be.a('string').and.not.be.empty;",
                  "    pm.expect(post.body).to.be.a('string').and.not.be.empty;",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [],
            "url": { "raw": "{{baseUrl}}/posts/1", "host": ["{{baseUrl}}"], "path": ["posts", "1"] }
          }
        },
        {
          "name": "Create Post - POST /posts",
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('Functional: Post created (201)', function () {",
                  "    pm.response.to.have.status(201);",
                  "});",
                  "",
                  "pm.test('Functional: Created post has an id', function () {",
                  "    const post = pm.response.json();",
                  "    pm.expect(post).to.have.property('id');",
                  "    pm.expect(post.id).to.be.a('number');",
                  "});",
                  "",
                  "pm.test('Functional: Created post echoes input data', function () {",
                  "    const post = pm.response.json();",
                  "    pm.expect(post.title).to.eql('Test Post from CI Pipeline');",
                  "    pm.expect(post.body).to.eql('This post was created by automated tests.');",
                  "    pm.expect(post.userId).to.eql(1);",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Test Post from CI Pipeline\",\n  \"body\": \"This post was created by automated tests.\",\n  \"userId\": 1\n}"
            },
            "url": { "raw": "{{baseUrl}}/posts", "host": ["{{baseUrl}}"], "path": ["posts"] }
          }
        },
        {
          "name": "Get Users - GET /users",
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('Functional: Users retrieved (200)', function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test('Functional: Returns 10 users', function () {",
                  "    const users = pm.response.json();",
                  "    pm.expect(users).to.be.an('array');",
                  "    pm.expect(users).to.have.lengthOf(10);",
                  "});",
                  "",
                  "// Schema validation",
                  "pm.test('Schema: Each user has required fields', function () {",
                  "    const users = pm.response.json();",
                  "    users.forEach(function (user) {",
                  "        pm.expect(user).to.have.all.keys('id', 'name', 'username', 'email', 'address', 'phone', 'website', 'company');",
                  "        pm.expect(user.id).to.be.a('number');",
                  "        pm.expect(user.name).to.be.a('string');",
                  "        pm.expect(user.email).to.be.a('string');",
                  "        pm.expect(user.email).to.include('@');",
                  "    });",
                  "});",
                  "",
                  "pm.test('Schema: User address has nested structure', function () {",
                  "    const user = pm.response.json()[0];",
                  "    pm.expect(user.address).to.have.all.keys('street', 'suite', 'city', 'zipcode', 'geo');",
                  "    pm.expect(user.address.geo).to.have.all.keys('lat', 'lng');",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [],
            "url": { "raw": "{{baseUrl}}/users", "host": ["{{baseUrl}}"], "path": ["users"] }
          }
        }
      ]
    },
    {
      "name": "Error Handling",
      "item": [
        {
          "name": "Invalid Resource - GET /posts/9999",
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('Error: Non-existent resource returns 404', function () {",
                  "    pm.response.to.have.status(404);",
                  "});",
                  "",
                  "pm.test('Error: Response body is empty object', function () {",
                  "    const body = pm.response.json();",
                  "    pm.expect(Object.keys(body)).to.have.lengthOf(0);",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [],
            "url": { "raw": "{{baseUrl}}/posts/9999", "host": ["{{baseUrl}}"], "path": ["posts", "9999"] }
          }
        },
        {
          "name": "Invalid Endpoint - GET /nonexistent",
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('Error: Unknown endpoint returns 404', function () {",
                  "    pm.response.to.have.status(404);",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [],
            "url": { "raw": "{{baseUrl}}/nonexistent", "host": ["{{baseUrl}}"], "path": ["nonexistent"] }
          }
        }
      ]
    },
    {
      "name": "Integration Flow",
      "item": [
        {
          "name": "Step 1 - Create Post",
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('Integration: Post created (201)', function () {",
                  "    pm.response.to.have.status(201);",
                  "});",
                  "",
                  "const post = pm.response.json();",
                  "pm.environment.set('integration_post_id', post.id);",
                  "pm.environment.set('integration_user_id', post.userId);",
                  "console.log('Integration Step 1 ✓ Created post:', post.id);"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Integration Test Post\",\n  \"body\": \"Testing the full create-read-update-delete flow.\",\n  \"userId\": 1\n}"
            },
            "url": { "raw": "{{baseUrl}}/posts", "host": ["{{baseUrl}}"], "path": ["posts"] }
          }
        },
        {
          "name": "Step 2 - Get User Posts",
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('Integration: User posts retrieved (200)', function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test('Integration: User has posts', function () {",
                  "    const posts = pm.response.json();",
                  "    pm.expect(posts).to.be.an('array');",
                  "    pm.expect(posts.length).to.be.above(0);",
                  "    console.log('Integration Step 2 ✓ User 1 has', posts.length, 'posts');",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/users/1/posts",
              "host": ["{{baseUrl}}"],
              "path": ["users", "1", "posts"]
            }
          }
        },
        {
          "name": "Step 3 - Get Post Comments",
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('Integration: Comments retrieved (200)', function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test('Integration: Post 1 has comments', function () {",
                  "    const comments = pm.response.json();",
                  "    pm.expect(comments).to.be.an('array');",
                  "    pm.expect(comments.length).to.be.above(0);",
                  "});",
                  "",
                  "pm.test('Integration: Comments have valid email format', function () {",
                  "    const comments = pm.response.json();",
                  "    comments.forEach(function (c) {",
                  "        pm.expect(c.email).to.include('@');",
                  "        pm.expect(c).to.have.all.keys('postId', 'id', 'name', 'email', 'body');",
                  "    });",
                  "    console.log('Integration Step 3 ✓ Post 1 has', comments.length, 'comments');",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/posts/1/comments",
              "host": ["{{baseUrl}}"],
              "path": ["posts", "1", "comments"]
            }
          }
        },
        {
          "name": "Step 4 - Update Post",
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('Integration: Post updated (200)', function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test('Integration: Updated title is reflected', function () {",
                  "    const post = pm.response.json();",
                  "    pm.expect(post.title).to.eql('Updated by CI Pipeline');",
                  "    console.log('Integration Step 4 ✓ Post 1 title updated');",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "PUT",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"id\": 1,\n  \"title\": \"Updated by CI Pipeline\",\n  \"body\": \"This post was updated during the integration test flow.\",\n  \"userId\": 1\n}"
            },
            "url": { "raw": "{{baseUrl}}/posts/1", "host": ["{{baseUrl}}"], "path": ["posts", "1"] }
          }
        },
        {
          "name": "Step 5 - Delete Post",
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('Integration: Post deleted (200)', function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "// Clean up env vars",
                  "pm.environment.unset('integration_post_id');",
                  "pm.environment.unset('integration_user_id');",
                  "console.log('Integration Step 5 ✓ Post 1 deleted — flow complete');"
                ]
              }
            }
          ],
          "request": {
            "method": "DELETE",
            "header": [],
            "url": { "raw": "{{baseUrl}}/posts/1", "host": ["{{baseUrl}}"], "path": ["posts", "1"] }
          }
        }
      ]
    }
  ]
}
